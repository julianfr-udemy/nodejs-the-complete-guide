extends ../layouts/main.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")
  link(rel="stylesheet" href="/css/product.css")

block content
  form.product-form(action=`/products/${product ? product._id : ""}` method="POST")
    .form-control
      label(for="title") Title
      input#title(type="text" name="title" value= product ? product.title : "")
    .form-control
      label(for="image") Image URL
      input#image(type="text" name="image" value= product ? product.image : "" )
    .form-control
      label(for="price") Price
      input#price(type="number" name="price" step="0.01" value= product ? product.price : "")
    .form-control
      label(for="description") Description
      textarea#description(name="description" rows="5")= product ? product.description : ""
    button.btn(type="submit")= product ? "Edit Product" : "Add Product"