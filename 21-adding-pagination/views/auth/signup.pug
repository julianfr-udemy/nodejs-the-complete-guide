extends ../layouts/main.pug

block styles
  link(rel="stylesheet", href="/css/auth.css")
  link(rel="stylesheet" href="/css/forms.css")

block content
  include ../includes/flash.pug
  form.login-form(action="/auth/signup" method="POST" novalidate)
    .form-control
      label(for="email") Email
      input#title(type="email" name="email" 
        class=validationErrors.find(e => e.param === "email") ? "invalid" : "" 
        value=input ? input.email : ""
      )
    .form-control
      label(for="password") Password
      input#image(type="password" name="password" 
        class=validationErrors.find(e => e.param === "password") ? "invalid" : ""
        value=input ? input.password : ""
      )
    .form-control
      label(for="confirmPassword") Confirm Password
      input#image(type="password" name="confirmPassword" 
        class=validationErrors.find(e => e.param === "confirmPassword") ? "invalid" : ""
        value=input ? input.confirmPassword : ""
      )
      include ../includes/csrf.pug
    button.btn(type="submit") Signup