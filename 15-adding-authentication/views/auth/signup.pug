extends ../layouts/main.pug

block styles
  link(rel="stylesheet", href="/css/auth.css")
  link(rel="stylesheet" href="/css/forms.css")

block content
  include ../includes/flash.pug
  form.login-form(action="/auth/signup" method="POST")
    .form-control
      label(for="email") Email
      input#title(type="email" name="email")
    .form-control
      label(for="password") Password
      input#image(type="password" name="password" )
    .form-control
      label(for="confirmPassword") Confirm Password
      input#image(type="confirmPassword" name="confirmPassword" )
      include ../includes/csrf.pug
    button.btn(type="submit") Signup